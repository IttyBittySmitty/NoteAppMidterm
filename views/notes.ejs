<%- include('partials/header') %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= title %></h1>
    <a href="/notes/add" class="btn btn-primary">Add New Note</a>
  </div>

  <% if (notes.length) { %>
    <div class="row">
      <% notes.forEach(note => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= note.title %></h5>
              <p class="card-text"><%= note.content.length > 100 ? `${note.content.substring(0, 100)}...` : note.content %></p>
              <p class="card-text">
                <small class="text-muted">
                  Last updated: <%= u.formatDate(note.updatedAt) %>
                </small>
              </p>
              <div class="d-flex justify-content-end gap-2">
                <a href="/notes/<%= note._id %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>
                <a href="/notes/<%= note._id %>/delete" class="btn btn-sm btn-outline-danger" 
                   onclick="return confirm('Are you sure you want to delete this note?')">Delete</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="alert alert-info">
      You haven't created any notes yet. Click the "Add New Note" button to get started!
    </div>
  <% } %>
</div>

<%- include('partials/footer') %> 